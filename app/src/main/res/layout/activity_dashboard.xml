<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halo, Selamat Datang !!"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#223480"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/TVUcapan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat datang"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textColor="#223480" />
            </LinearLayout>

            <ImageView
                android:id="@+id/IVProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_account_circle_24"
                android:layout_marginLeft="70dp"
                android:clickable="true"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/IVAbout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo2"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLArus"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_shapes"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Kecepatan Arus "
                    android:textColor="#223480"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVArus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="0 m/s"
                    android:textColor="#223480"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/IVGArus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/arus1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LLTinggi"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_shapes"
            android:clickable="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Ketinggian Air "
                    android:textColor="#223480"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVTinggi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="0,1 cm"
                    android:textColor="#223480"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/IVGTinggi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/tinggi1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LLCuaca"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_shapes"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kondisi Cuaca "
                    android:fontFamily="sans-serif"
                    android:textColor="#223480"
                    android:textSize="23sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TVCuaca1"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="Tidak ada Hujan"
                    android:textColor="#223480"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/IVGCuaca"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cuaca1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LLKondisi"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_shapes"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kondisi Luapan Air "
                    android:fontFamily="sans-serif"
                    android:textColor="#223480"
                    android:textSize="23sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TVKondisi1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:text="Bahaya Sedang! Waspada dan persiapkan evakuasi."
                    android:textColor="#223480"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/IVGKondisi"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/kondisi"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/TVKontak"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shapes4"
            android:clickable="true"
            android:text="Kontak Darurat"
            android:textColor="#223480"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/TVPanduan"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shapes4"
            android:clickable="true"
            android:text="Panduan Evakuasi"
            android:textColor="#223480"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>