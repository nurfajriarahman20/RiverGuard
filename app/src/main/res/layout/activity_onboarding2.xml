<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3">


    <ImageView
        android:layout_width="172dp"
        android:layout_height="209dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/ob2" />


    <TextView
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Peringatan Potensi Banjir"
        android:textColor="#223480"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:padding="22dp"
        android:text="Dapatkan Notifikasi Potensi Banjir Melalui Pemantauan Debit Air dan Cuaca"
        android:textColor="#223480"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/IVBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/shapes2"
            android:src="@drawable/baseline_arrow_circle_left_24"
            android:clickable="true"/>


        <ImageView
            android:id="@+id/IVMulai"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="135dp"
            android:background="@drawable/shapes2"
            android:src="@drawable/baseline_arrow_circle_right_24"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>
