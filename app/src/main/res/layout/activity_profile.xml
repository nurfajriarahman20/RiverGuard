<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SAProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9DADFA"
        app:title="Kembali"
        app:titleTextColor="#223480"
        app:navigationIcon="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Akun"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#223480"
        android:fontFamily="sans-serif-medium" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo2"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="#223480" />

    <EditText
        android:id="@+id/ETNama"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="Nama"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="#223480"
        android:background="@drawable/background_shapes"/>

    <EditText
        android:id="@+id/ETEmail"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="Email"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="#223480"
        android:background="@drawable/background_shapes"/>

    <EditText
        android:id="@+id/ETKota"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
       android:hint="Domisili"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="#223480"
        android:background="@drawable/background_shapes"/>

    <EditText
        android:id="@+id/ETNohp"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="No Telepon"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="#223480"
        android:background="@drawable/background_shapes"/>

    <TextView
        android:id="@+id/TVSimpan"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:text="Simpan"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textColor="#223480"
        android:clickable="true"
        android:textStyle="bold"
        android:background="@drawable/shapes3" />


</LinearLayout>
</ScrollView>
