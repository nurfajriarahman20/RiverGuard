<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@android:color/transparent" /> <!-- Warna latar belakang -->

    <corners android:radius="100dp"/>  <!-- Radius sudut untuk membuatnya melengkung -->

    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/> <!-- Padding di dalam shape -->

    <stroke
        android:width="2dp"
        android:color="#515A90" />
</shape>
